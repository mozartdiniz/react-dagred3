{
    "compilerOptions": {
        "esModuleInterop": true,
        "jsx": "react",
        "module": "commonjs",
        "noImplicitAny": true,
        "outDir": "./dist/",
        "preserveConstEnums": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es5",
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["./src/**/**/*"]
}
